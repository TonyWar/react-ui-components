$dark = #2C2C3C
$light = #F0F2F4
$secondary = #F27E02

.loader
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  .loader
    &__inner
      position: relative;
      padding: 10px;
      font-weight: 800;
      font-size: 5em;
      letter-spacing: 0.05em;
      text-transform: uppercase;
      background-color: $light;
      
      &::before
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 33.33%;
        height: 100%;
        background-color: $dark;
        animation: animate 1s linear infinite alternate;
        filter: contrast(10);

    &__text
      color: $light;
      mix-blend-mode: difference;

@keyframes animate {
  100% {
    left: calc(100% - 33.33%);
  }
}
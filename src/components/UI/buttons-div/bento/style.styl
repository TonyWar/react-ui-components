.box 
  width: 10px;
  height: 10px;
  background: black;
  margin: 3px 3px;
  display: inline-block;
  transition: all 300ms cubic-bezier(0.175, 0.885, 0.32, 1.275);


.menu__item--bento 
  &.active 
    .box:nth-child(2),
    .box:nth-child(4),
    .box:nth-child(6),
    .box:nth-child(8) 
      opacity: 0;
    
  

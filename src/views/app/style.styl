// href only link
a[href^="http"]:empty::before
  content attr(href)

$dark = #2C2C3C
$light = #F0F2F4
$secondary = #F27E02

// use em for responsive font size
body
  font-size 16px
  font-family 'Roboto', sans-serif
  background-color: $light
  color: #2C2C3C

.bg-dark
  background-color: $dark
  color: #ffffff

.bg-light
  background-color $light
  color: #2C2C3C

.bg-default
  background-color #ffffff
  color: #2C2C3C